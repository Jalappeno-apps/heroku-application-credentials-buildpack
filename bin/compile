#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}

echo "------> Generating .profile.d file to generate x-credentials.json at startup"
mkdir -p $BUILD_DIR/.profile.d
GOOGLE_CREDENTIALS=$(cat ${ENV_DIR}/GOOGLE_CREDENTIALS)
PASSKIT_PRIVATE_P12_CERTIFICATE=$(cat ${ENV_DIR}/PASSKIT_PRIVATE_P12_CERTIFICATE_FILE)
PASSKIT_APPLE_INTERMEDIATE_CERTIFICATE=$(cat ${ENV_DIR}/PASSKIT_APPLE_INTERMEDIATE_CERTIFICATE_FILE)
PASSKIT_CERTIFICATE_KEY=$(cat ${ENV_DIR}/PASSKIT_CERTIFICATE_KEY)

echo "echo ${GOOGLE_CREDENTIALS} > /app/google-credentials.json" > $BUILD_DIR/.profile.d/google-credentials.sh
echo "echo ${PASSKIT_APPL_CERTIFICATE} > /app/cert.pem" > $BUILD_DIR/.profile.d/passkit-pvt-p12-cert.sh
echo "echo ${PASSKIT_APPLE_PVT_KEY} > /app/key.pem" > $BUILD_DIR/.profile.d/passkit-cert-key.sh
echo "echo ${PASSKIT_APPLE_INTERMEDIATE_CERTIFICATE} > /app/AppleWWDRCAG6.cer" > $BUILD_DIR/.profile.d/passkit-apple-imd-cert.sh
echo "openssl pkcs12 -export -out /app/cert.p12 -in cert.pem -inkey key.pem -nodes -passin pass:${PASSKIT_CERTIFICATE_KEY} -passout pass:${PASSKIT_CERTIFICATE_KEY} && rm /app/cert.pem /app/key.pem" > $BUILD_DIR/.profile.d/compile-key.sh

chmod +x $BUILD_DIR/.profile.d/google-credentials.sh
chmod +x $BUILD_DIR/.profile.d/passkit-pvt-p12-cert.sh
chmod +x $BUILD_DIR/.profile.d/passkit-cert-key.sh
chmod +x $BUILD_DIR/.profile.d/passkit-apple-imd-cert.sh
chmod +x $BUILD_DIR/.profile.d/compile-key.sh
